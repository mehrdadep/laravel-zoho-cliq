{
    "name": "mehrdadep/laravel-zoho-cliq",
    "description": "Notification provider for laravel based on the Zoho Cliq",
    "homepage": "https://github.com/mehrdadep/laravel-zoho-cliq",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehrdad Esmaeilpour",
            "email": "esmaeilpour.mehrdad@gmail.com",
            "homepage": "https://mehrdadep.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "illuminate/notifications": "~5.5 || ~6.0 || ~7.0 || ^8.0 || ^9.0",
        "illuminate/support": "~5.5 || ~6.0 || ~7.0 || ^8.0 || ^9.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\:channel_namespace\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\:channel_namespace\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
